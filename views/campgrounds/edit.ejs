<% layout("layouts/boilerplate") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3">
      <h1 class="text-center mb-5">Edit Campground</h1>
      <form
        action="/campgrounds/<%=camp._id %>?_method=PUT"
        method="POST"
        novalidate
        class="validated-form"
        enctype="multipart/form-data"
      >
        <div>
          <label for="title" class="form-label mt-2">Title</label>
          <input type="text" id="title" name="title" class="form-control" />
          <div class="valid-feedback">Looks Good</div>
          <div class="invalid-feedback">Oh no!</div>
        </div>
        <div>
          <label for="location" class="form-label mt-2">Location</label>
          <input
            type="text"
            id="location"
            name="location"
            class="form-control"
          />
          <div class="valid-feedback">Looks Good</div>
          <div class="invalid-feedback">Oh no!</div>
        </div>
        <div>
          <label for="price" class="form-label mt-2">Price</label>
          <input type="text" id="price" name="price" class="form-control" />
          <div class="valid-feedback">Looks Good</div>
          <div class="invalid-feedback">Oh no!</div>
        </div>
        <div>
          <label for="description" class="form-label mt-2">Description</label>
          <input
            type="text"
            id="description"
            name="description"
            class="form-control"
          />
          <div class="valid-feedback">Looks Good</div>
          <div class="invalid-feedback">Oh no!</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label mt-2">
            <span class="custom-file-label">Add more images</span>
          </label>
          <input
            type="file"
            id="image"
            name="image"
            class="form-control custom-file"
            multiple
          />
          <div class="valid-feedback">Looks Good</div>
          <div class="invalid-feedback">Oh no!</div>
        </div>
        <div class="mb-3">
          <% camp.images.forEach(function(img, i) { %>

          <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="" />
          <div class="form-check-inline">
            <input
              type="checkbox"
              id="image-<%=i%>"
              name="deleteImages[]"
              value="<%=img.filename%>"
            />
          </div>
          <label for="image-<%=i%>">Delete?</label>
          <% })%>
        </div>

        <button class="btn btn-success mb-5">Update</button>
      </form>
      <a href="/campgrounds"><button class="btn-primary mb-3">Back</button></a>
    </div>
  </div>
</div>
