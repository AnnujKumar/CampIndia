<% layout("layouts/boilerplate") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3">
      <h1 class="text-center mb-3">New Campground</h1>
      <form
        action="/campgrounds"
        method="POST"
        novalidate
        class="validated-form"
        enctype="multipart/form-data"
      >
        <div>
          <label for="title" class="form-label mt-2">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks Good</div>
          <div class="invalid-feedback">Oh no!</div>
        </div>
        <div>
          <label for="location" class="form-label mt-2">Location</label>
          <input
            type="text"
            id="location"
            name="location"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks Good</div>
          <div class="invalid-feedback">Oh no!</div>
        </div>
        <div>
          <label for="price" class="form-label mt-2">Price</label>
          <input
            type="text"
            id="price"
            name="price"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks Good</div>
          <div class="invalid-feedback">Oh no!</div>
        </div>
        <div>
          <label for="description" class="form-label mt-2">Description</label>
          <input
            type="text"
            id="description"
            name="description"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks Good</div>
          <div class="invalid-feedback">Oh no!</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label mt-2">
            <span class="custom-file-label">Images</span>
          </label>
          <input
            type="file"
            id="image"
            name="image"
            class="form-control custom-file"
            multiple
            required
          />
          <div class="valid-feedback">Looks Good</div>
          <div class="invalid-feedback">Oh no!</div>
        </div>
        <button class="btn btn-success mb-5">Create</button>
      </form>
    </div>
  </div>
</div>
